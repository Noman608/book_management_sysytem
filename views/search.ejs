<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="/css/styles.css">
   <title>Search Books</title>
</head>
<body>
   <h1>Search Books</h1>
   <form action="/search" method="POST">
      <div>
         <label for="keyword">Keyword:</label>
         <input type="text" id="keyword" name="keyword" required>
      </div>
      <div>
         <label for="age">Publisher Age:</label>
         <select id="age" name="age" required>
            <!-- Add age options here -->
         </select>
      </div>
      <div>
         <label>Genre:</label>
         <input type="checkbox" id="sci-fi" name="genre" value="sci-fi">
         <label for="sci-fi">Sci-Fi</label>
         <input type="checkbox" id="drama" name="genre" value="drama">
         <label for="drama">Drama</label>
         <input type="checkbox" id="novel" name="genre" value="novel">
         <label for="novel">Novel</label>
      </div>
      <button type="submit">Search</button>
   </form>
   <% if (typeof books !== 'undefined') { %>
      <h2>Search Results</h2>
      <table>
         <thead>
            <tr>
               <th>Serial</th>
               <th>Title</th>
               <th>Publisher</th>
            </tr>
         </thead>
         <tbody>
            <% books.forEach((book, index) => { %>
               <tr>
                  <td><%= index + 1 %></td>
                  <td><%= book.title %></td>
                  <td><%= book.publisher %></td>
               </tr>
            <% }); %>
         </tbody>
      </table>
   <% } %>
   <a href="/">Add Book</a>
   <a href="/booklist">View Booklist</a>
</body>
</html>
